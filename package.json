{
	"name": "tabformatter",
	"version": "0.0.1",
	"displayName": "Table Formatter",
	"publisher": "SpectralMorphy",
	"icon": "",
	"categories": [
		"Other"
	],
	"main": "./dist/extension.js",
	"engines": {
		"vscode": "^1.94.0"
	},
	"activationEvents": [],
	"contributes": {
		"commands": [
			{
				"command": "tabformatter.format",
				"title": "Format as table"
			},
			{
				"command": "tabformatter.setSeparator",
				"title": "Set preferred table separator"
			}
		],
		"configuration":{
			"title": "",
			"properties": {
				"tabformatter.separator": {
					"type": ["string", "null"],
					"default": null,
					"description": "Column separator. If not found in the text, space is used as separator."
				}
			}
		}
	},
	"scripts": {
		"build": "./node_modules/typescript/bin/tsc"
	},
	"devDependencies": {
		"@types/vscode": "^1.94.0",
		"typescript": "^5.6.3"
	}
}
